#set($title = "我的主页")
#set($layout="default/layout/columns_left_sidebar.vm")

<style>
.laydate_box, .laydate_box * {
      box-sizing:content-box;
}

input.laydate-icon,div.laydate-icon{
	display: block;
	width: 100%;
	height: 34px;
	padding: 6px 12px;
	font-size: 14px;
	line-height: 1.42857143;
	color: #555;
	border: 1px solid #ccc;
	border-radius: 4px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
	-webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
	-o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
	transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
}
div.laydate-icon{
	text-align: left;
}

#ul_myPosMgr li {padding: 5px;}
</style>
<script type="text/javascript">
    
    function submitCurForm(p){
    	$("#pn").val(p);
    	$(".CurForm").submit();
    }
    
</script>
<div class="shadow-box">
	<div class="filter">
		<ul class="">
			<li><a class="" href="$base/home/point">我的积分</a></li>
			<li><a class="active" href="$base/home/pointDetail">积分明细</a></li>
		</ul>
	</div>
	<!-- tab panes -->
	<div class="stream-list">
	
	
		<div style="padding-top: 20px; padding-left: 10px;">
    		<form class="CurForm" action="$base/home/pointDetail" method="post">
    		<input type="hidden" id="pn" name="pn" value="${page.pageNo}" />
    		<ul id="ul_myPosMgr">
				<li>
					开始日<input name="yearmonthdatestart" onclick="laydate({max:laydate.now(), format: 'YYYY-MM-DD'})" value="$!{yearmonthdatestart}">
					截止日<input name="yearmonthdateend" onclick="laydate({max:laydate.now(), format: 'YYYY-MM-DD'})" value="$!{yearmonthdateend}" > 
					<input type="button" value="查询" onclick="submitCurForm(1)"  >
				</li>
			</ul>
    		</form>
		</div>
        <div class="pull-out m-t-small">
            <table id="treeTable" class="table table-striped table-bordered b-t text-small">
                <tr>
                    <th>#</th>
                    <th>变动前总积分</th>
                    <th>变动积分</th>
                    <th>变动后积分</th>
                    <th>更新时间</th>
                    <th>关联id</th>
                    <th>来源</th>
                    <th>刷卡平台</th>
                    <th>交易流水号</th>
                    #if($shiro.hasPermission("friendLink:edit1"))
                    	<th>所属代理</th>
                        <th width="300" class="col-lg-2">操作</th>
                    #end
                </tr>
                 <tr>
                #foreach($row in $page.results)
                    <td>$!{velocityCount}</td>
                    <td>$!{row.beforePoint}</td>
                    <td>$!{row.addPoint}</td>
                    <td>$!{row.afterPoint}</td>
                    <td>$!{row.updateTime} </td>
                    <td>$!{row.opId}</td>
                    <td>$!{row.relateId}</td>
                    <td>$!{row.sourceDesc}</td>
                    #if($shiro.hasPermission("friendLink:edit1"))
                    	<td>$!{row.agencyName}</td>
                        <td class="text-center">
                            <a href="edit?id=${row.id}" class="btn btn-mini btn-primary">
                                <i class="fa fa-check-square-o"></i> 修改
                            </a>
                        </td>
                    #end
                </tr>
                #end
            </table>
            
        </div>
        
        
	</div>
</div>
<div class="text-center clr">
	#pageHtm("home?method=myPos" $page 5)
</div>

<script type="text/javascript">
$(function() {
	
	// edit
	$('a[data-evt=edit]').click(function () {
		var id = $(this).attr('data-id');
		window.location.href='$base/post/to_update/' + id;
	});
})
</script>